Header set Access-Control-Allow-Origin "*"
RewriteEngine On
RewriteBase /lod/api/

RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

RewriteRule ^(.*)$ index.php/$1 [QSA,L]

# put the db credentials here
SetEnv DB_PASS 
SetEnv DB_NAME 
SetEnv DB_USER_NAME 
SetEnv DB_SERVER_NAME 
SetEnv DOCUMENT_ROOT 